.box {
    align-items: flex-end;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    position: fixed;
    right: 0;
    top: -20rpx;
    width: 600rpx;
    z-index: 999;
}

.arrow {
    border: 20rpx solid transparent;
    border-bottom-color: #3ba7a3;
    height: 0;
    margin-right: 120rpx;
    width: 0;
}

.body {
    align-items: center;
    background-color: #3ba7a3;
    border-radius: 12rpx;
    box-shadow: 0 10rpx 20rpx -10rpx #1f5b59;
    display: flex;
    height: 84rpx;
    justify-content: center;
    margin-right: 40rpx;
    padding: 0 20rpx;
}

.body>text {
    color: #fff;
    font-size: 28rpx;
    font-weight: 400;
}

.modal {
    background-color: rgba(0,0,0,.808);
    bottom: 0;
    left: 0;
    padding: 20px;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 999;
}

.modal>view {
    display: flex;
    flex-direction: column;
    margin: 10px 0;
}

.modal>view>text {
    color: #fff;
    font-size: 16px;
    font-weight: 400;
    margin-bottom: 5px;
}

.modal>view>image {
    border-radius: 10px;
}

.ok-btn {
    margin-top: 40px;
    width: 100%;
}

.ok-btn,.ok-btn>view {
    align-items: center;
    display: flex;
    justify-content: center;
}

.ok-btn>view {
    background-color: #ff0000de;
    border-radius: 40px;
    box-shadow: 0 5px 10px -px #3ba7a3;
    height: 40px;
    width: 120px;
}

.ok-btn>view>text {
    color: #fff;
    font-size: 14px;
    font-weight: 400;
}

.btn-hover {
    opacity: .6;
}