.explain {
    font-size: 28rpx;
    margin: 20rpx;
}

.sort_title {
    color: #fff;
    font-size: 20rpx;
    left: 10rpx;
    position: absolute;
    top: 320rpx;
}

.sort_title text {
    color: #ff6a00;
    margin-left: 10rpx;
}

.article {
    padding: 20rpx 10px;
}

.article input,.article textarea {
    background: #fff;
    border-radius: 10rpx;
    color: #000;
    font-size: 32rpx;
    margin: 10rpx;
    min-height: 50rpx;
    padding: 10rpx;
    width: calc(100% - 40rpx);
}

.article textarea {
    min-height: 150rpx;
}

.article .btn {
    background-color: #1f5b59;
    color: #fff;
    font-size: 28rpx;
    margin: 20rpx;
}

.article .title {
    text-align: center;
}

.article .desc {
    color: #aaa;
    font-size: 28rpx;
}

.article .extend {
    margin: 20rpx 10rpx;
}

.btn-hover {
    background-color: #3ba7a3;
}

.gallery {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    margin: 0 auto;
    width: 630rpx;
}

.item {
    height: 200rpx;
    margin: 10rpx 5rpx;
    position: relative;
    width: 200rpx;
}

.item image {
    height: 100%;
    width: 100%;
}

.item .addIcon {
    background: #f2f2f2;
    color: #555;
    font-size: 80rpx;
    height: 200rpx;
    line-height: 200rpx;
    position: relative;
    text-align: center;
    width: 200rpx;
}

.delete {
    font-size: 22rpx;
    font-weight: 700;
    height: 36rpx;
    opacity: 1;
    padding: 0 8rpx 0 10rpx;
    position: absolute;
    right: 0;
    top: 0;
}