view {
    font-size: 25rpx;
}

ec-canvas {
    height: 480rpx;
    width: 100%;
}

.title {
    font-size: 35rpx;
    margin: 10rpx 0 0;
}

.desc {
    color: #bbb;
    font-size: 25rpx;
    padding: 2rpx 10rpx;
}

.previous {
    float: left;
    margin-left: 20rpx;
}

.next,.previous {
    background-color: #1f5b59;
    color: #fff;
    font-size: 28rpx;
    padding: 12rpx 35rpx;
}

.next {
    float: right;
    margin-right: 20rpx;
}

.clear {
    clear: both;
    width: 100%;
}

.editContainer {
    margin-top: 40rpx;
}

.editContainer input {
    background: #fff;
    border-radius: 10rpx;
    color: #000;
    font-size: 32rpx;
    margin: 20rpx 30rpx;
    padding: 10rpx 20rpx;
}

.editContainer label {
    margin-left: 30rpx;
}

.btn-hover {
    background-color: #3ba7a3;
}

.buts {
    padding: 10rpx 20rpx;
}

.buts button {
    margin: 20rpx 0;
}

.buts .btn {
    background-color: #1f5b59;
    color: #fff;
    font-size: 28rpx;
    margin: 20rpx;
}

.container {
    border: 1rpx solid #fff;
    margin: 30rpx 20rpx;
    padding: 30rpx 0rpx;
}

radio-group {
    margin: 10rpx 0rpx;
}

radio-group label {
    margin: 10rpx 30rpx;
}