.Container {
    height: 100vh;
    text-align: center;
}

.img {
    width: 90%;
}

.test {
    font-size: 20rpx;
    text-align: center;
}

.hr {
    border-top: 1rpx solid #fff;
    height: 1rpx;
    margin: 50rpx 10%;
}

.buts {
    margin: 30rpx auto 50rpx;
    width: 94%;
}

.buts .btn {
    background-color: #1f5b59;
    color: #fff;
    font-size: 28rpx;
    margin: 30rpx;
}

.btn-hover {
    background-color: #3ba7a3;
}

.desc {
    font-size: 30rpx;
    margin: 10rpx auto;
    text-align: center;
}

.desc label {
    margin: 0 10rpx;
}

.desc .title {
    color: #fff;
    font-size: 35rpx;
    margin-top: 50rpx;
}

.info {
    background: #fff;
    border-radius: 20rpx;
    margin: 10rpx auto 30rpx;
    padding: 5%;
    text-align: center;
}

.info label {
    margin: 0 10rpx;
}

.info .name {
    color: #1f5b59;
    font-size: 40rpx;
}

.info .state {
    color: #3ba7a3;
    font-size: 35rpx;
}

.info .baike_info {
    margin: 15rpx 0;
    text-align: left;
    width: 100%;
}

.info .baike_info image {
    border-radius: 20rpx;
    margin: auto;
    width: 100%;
}

.info .baike_info text {
    color: #1f5b59;
    font-size: 27rpx;
    margin: auto;
    width: 90%;
}

.engine {
    font-size: 28rpx;
    margin: auto;
    width: 88%;
}

.engine view {
    margin: 20rpx 0;
}

.link {
    color: coral;
    font-size: 22rpx;
    line-height: 10rpx;
    padding: 0 10rpx;
    text-align: right;
}

.add {
    bottom: 30rpx;
    font-size: 20rpx;
    opacity: .75;
    position: fixed;
    right: 30rpx;
    text-align: center;
}

.add image {
    height: 60rpx;
    width: 60rpx;
}